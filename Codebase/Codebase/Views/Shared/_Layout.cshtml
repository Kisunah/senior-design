<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Codebase</title>
		<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
		<link rel="stylesheet" href="~/lib/codemirror-5.65.0/lib/codemirror.css" />
		<link rel="stylesheet" href="~/lib/codemirror-5.65.0/theme/xq-light.css" />
		<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
		<link rel="stylesheet" href="~/Codebase.styles.css" asp-append-version="true" />
	</head>
	<body>
		<header>
			<div id="navbar">
				<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
					<div class="container-lg">
						<div class="row" style="width: inherit; display: flex; align-items: center; justify-content: center;">
							<div class="col-2">
								<a class="navbar-brand" asp-area="" asp-controller="c" asp-action="Home">Codebase</a>
							</div>
							<div class="col-8">
								<div class="input-group">
									<input type="text" class="form-control" v-model="searchTerm"  placeholder="Search">
									<div class="input-group-append">
										<button class="btn btn-outline-light" v-on:click="search()" type="button"><i class="fas fa-search" style="color: white;"></i></button>
									</div>
								</div>
							</div>
							<div class="col-1">
								<a class="navbar-brand" asp-area="" asp-controller="c" asp-action="Create"><i class="fas fa-plus" style="color: white;"></i></a>
							</div>
							<div class="col-auto">
								<a class="navbar-brand" asp-area="" asp-controller="c" asp-action="User"><i class="fas fa-user" style="color: white;"></i></a>
							</div>
							<div class="col-auto">
								<a class="navbar-brand" asp-area="" asp-controller="c" asp-action="User"><i class="fas fa-sign-out-alt" style="color: white;"></i></a>
							</div>
						</div>
					</div>
				</nav>
			</div>
		</header>
		<div class="container-lg mt-3">
			<main id="main" role="main" class="pb-3">
				@RenderBody()
			</main>
		</div>
		<script src="~/lib/jquery/dist/jquery.min.js"></script>
		<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
		<script src="~/lib/codemirror-5.65.0/lib/codemirror.js"></script>
		<script src="https://kit.fontawesome.com/824e01381c.js" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/lodash@4.17.10/lodash.min.js"></script>
		<script src="https://rawgit.com/moment/moment/2.2.1/min/moment.min.js"></script>
		<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
		<script src="~/js/navbar.js" asp-append-version="true"></script>
		@await RenderSectionAsync("Scripts", required: false)
	</body>
</html>