@{
ViewData["Title"] = "Create";
}
<div id="create" v-cloak>
   <div class="container-lg" style="position: fixed;">
      <div class="row" style="height: 88vh;">
         <div class="col-2"></div>
         <div class="col-8">
            <form>
               <div class="form-group">
                  <label>Snippet Title</label>
                  <input class="form-control" placeholder="My Snippet">
               </div>
               <div class="form-group">
                  <label>Language</label>
                  <select class="form-control">
                     <option v-for="language in languages">{{ language.language }}</option>
                  </select>
               </div>
               <fieldset class="form-group">
                  <div class="row">
                     <div class="col-sm-10">
                        <div class="form-check">
                           <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="true" checked>
                           <label class="form-check-label">
                           Private
                           </label>
                        </div>
                        <div class="form-check">
                           <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="false">
                           <label class="form-check-label">
                           Public
                           </label>
                        </div>
                     </div>
                  </div>
               </fieldset>
               <div id="textarea_editor"></div>
               <div class="form-group row">
                  <label class="col-sm-2 col-form-label">Tags</label>
                  <div class="col-sm-10">
                     <button type="button" vform="tag in selectedTags" :id="'tag-button-' + tag.id" class="btn btn-outline-primary btn-sm"  v-on:click="tagDetails(tag.id)">{{ tag.tag }}</button>
                     <button type="button" class="btn btn-outline-primary btn-sm"  v-on:click="addTags()"><i class="fas fa-plus" style="color: white;"></i></button>
                  </div>
               </div>
               <button type="submit" class="btn btn-outline-primary">Discard</button>
               <button type="submit" class="btn btn-outline-primary">Submit</button>
            </form>
         </div>
      </div>
   </div>
</div>
@section Scripts
{
<script src="~/js/create.js" asp-append-version="true"></script>
}