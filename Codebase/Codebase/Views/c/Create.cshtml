@{
ViewData["Title"] = "Create";
}

<div id="create" v-cloak>
   <div class="container-lg" style="position: fixed;">
      <div class="row" style="overflow-y: scroll; height: 86vh;">
         <div class="col-2"></div>
         <div class="col-8">
            <form>
               <div class="form-group row mb-2">
                  <label class="col-sm-2 col-form-label">Snippet Title</label>
                  <div class="col-sm-10">
                    <input class="form-control" placeholder="My Snippet" v-model="title">
                  </div>
               </div>
               <div class="form-group row mb-2">
                  <label class="col-sm-2 col-form-label">Language</label>
                  <div class="col-sm-10">
                      <select class="form-control" v-model="language">
                         <option v-for="language in languages" :id="language.id">{{ language.language }}</option>
                      </select>
                  </div>
               </div>
               <fieldset class="form-group row mb-2">
                  <label class="col-sm-2 col-form-label">Is Private</label>
                     <div class="col-sm-10">
                        <div class="form-check">
                           <input class="form-check-input" type="radio" v-model="isPrivate" name="gridRadios" id="gridRadios1" value="true" checked>
                           <label class="form-check-label">
                           Private
                           </label>
                        </div>
                        <div class="form-check">
                           <input class="form-check-input" type="radio" v-model="isPrivate" name="gridRadios" id="gridRadios2" value="false">
                           <label class="form-check-label">
                           Public
                           </label>
                        </div>
                     </div>
               </fieldset>
               <div id="textarea_editor" class="mb-2"></div>
               <div class="form-group row  mb-2">
                  <label class="col-sm-2 col-form-label">Tags</label>
                  <div class="col-sm-10">
                     <button type="button" v-if="selectedTags.length > 0" v-for="tag in selectedTags" :id="'tag-button-' + tag.id" class="btn btn-outline-primary btn-sm"  v-on:click="tagDetails(tag.id)">{{ tag.tag }}</button>
                     <button type="button" class="btn btn-outline-primary btn-sm"  v-on:click="addTags()"><i class="fas fa-plus" style="color: white;"></i></button>
                  </div>
               </div>
               <button type="submit" class="btn btn-outline-primary">Discard</button>
               <button type="submit" class="btn btn-outline-primary">Submit</button>
            </form>
         </div>
         <div class="col-2"></div>
      </div>
   </div>
</div>

@section Scripts
{
<script src="~/js/create.js" asp-append-version="true"></script>
}