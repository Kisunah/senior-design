@{
    ViewData["Title"] = "User Page";
}

<div id="user" v-cloak>
    <div class="container-lg" style="position: fixed;">
        <div class="row" style="height: 88vh;">
            <div class="col-2">
                <div class="row mt-5">
                    <i class="fas fa-user fa-10x" style="text-align: center;"></i>
                </div>
                <div class="row mt-3">
                    <h4 style="text-align: center;">{{ user.username }}</h4>
                </div>
                <div class="row">
                    <h6 style="text-align: center;">{{ user.creationDate }}</h6>
                </div>
                <div class="row">
                    <div>{{ user.description }}</div>
                </div>
                <div class="row mt-3">
                    <ul class="list-group">
                      <li class="list-group-item active" aria-current="true">Stats for Nerds</li>
                      <li class="list-group-item">Number of Posts: {{ user.numberOfPosts }}</li>
                      <li class="list-group-item">Upvotes: {{ user.upvotes }}</li>
                      <li class="list-group-item">Downvotes: {{ user.downvotes }}</li>
                      <li class="list-group-item">Comments: {{ user.comments }}</li>
                    </ul>
                </div>
            </div>
            <div class="col-10" style="padding-right: 3vh;">
                <div class="row" style="overflow-y: scroll; height: 88vh;">
                    <ul class="list-group">
                        <li class="list-group-item list-group-item-dark" aria-current="true">
                            <div class="row">
                                <div class="col-3">
                                    <h2>Snippets</h2>
                                </div>
                                <div class="col-9" style="text-align: right; margin: auto;">
                                    <div class="btn-group btn-group-sm" role="group">
                                      <button type="button" class="btn btn-primary" v-on:click="sortSnippets(1)">Hot</button>
                                      <button type="button" class="btn btn-primary" v-on:click="sortSnippets(2)">Popular</button>
                                      <button type="button" class="btn btn-primary" v-on:click="sortSnippets(3)">Contraversial</button>
                                      <button type="button" class="btn btn-primary" v-on:click="sortSnippets(4)">Week</button>
                                      <button type="button" class="btn btn-primary" v-on:click="sortSnippets(5)">Month</button>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item mt-3" v-for="snippet in sortedSnippets" v-bind:key="snippet.id">
                            <div class="row">
                                <div class="col-2" style="margin: auto;">
                                    <div class="row">
                                        <i class="fas fa-arrow-up" style="text-align: center;" v-on:click="upvote(snippet)"></i>
                                    </div>
                                    <div class="row">
                                        <h4 style="text-align: center; margin: auto;">{{ snippet.upvotes - snippet.downvotes }}</h4>
                                    </div>
                                    <div class="row">
                                        <i class="fas fa-arrow-down" style="text-align: center;" v-on:click="downvote(snippet)"></i>
                                    </div>
                                </div>
                                <div class="col-10">
                                    <div class="row">
                                        <div class="col-8">
                                            <div class="row" v-on:click="navigateToSnippet(snippet)">
                                                <h1>{{ snippet.title }}</h1>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="row" v-on:click="gotoUser(snippet)">
                                                Author: {{ snippet.username }}
                                            </div>
                                            <div class="row">
                                                Created: {{snippet.creationDate}}
                                            </div>
                                            <div class="row">
                                                <div v-if="snippet.isPrivate">
                                                    <i class="fas fa-lock" style="text-align: center;" v-on:click="setPrivate(snippet)"></i>
                                                </div>
                                                <div v-else>
                                                    <i class="fas fa-lock-open" style="text-align: center;" v-on:click="setPrivate(snippet)"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>   
                                    <div class="row">
                                        Language:&nbsp;
                                        <div class="mb-1" style="width: fit-content; padding-left: 0; padding-right: 10px;">
                                            <button type="button" :id="'language-button-' + snippet.languageID" class="btn btn-outline-primary btn-sm" disabled>{{ snippet.language }}</button>
                                        </div>
                                    </div>
                                    <div class="row" v-if="snippet.tags.length != 0">
                                        Tags:&nbsp;
                                        <div class="mb-1" v-for="tag in snippet.tags" v-bind:key="snippet.id + '-' + tag.id" style="width: fit-content; padding-left: 0; padding-right: 10px;">
                                            <button type="button" :id="'tag-button-' + tag.id" class="btn btn-outline-primary btn-sm" disabled>{{ tag.tag }}</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
  <script src="~/js/user.js" asp-append-version="true"></script>
}
